{
	"name": "orbitals",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "npm run build-cpp && vite dev",
		"build": "npm run build-cpp && npm run build-js",
		"build-js": "vite build",
		"build-cpp": "cmake --build ./cmake-build && cmake --install ./cmake-build/ --prefix .",
		"test-cpp": "cd ./cmake-build && ctest --output-on-failure",
		"cmake-setup": "cmake -S . -B ./cmake-build",
		"cmake-setup-dev": "cmake -S . -B ./cmake-build -DDEBUG_MODE=True",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write ."
	},
	"devDependencies": {
		"@sveltejs/adapter-static": "^2.0.1",
		"@sveltejs/kit": "^1.5.0",
		"@types/emscripten": "^1.39.6",
		"@typescript-eslint/eslint-plugin": "^5.45.0",
		"@typescript-eslint/parser": "^5.45.0",
		"autoprefixer": "^10.4.14",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"postcss": "^8.4.21",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.8.1",
		"svelte": "^3.54.0",
		"svelte-check": "^3.0.1",
		"tailwindcss": "^3.3.1",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^4.2.0"
	},
	"type": "module"
}
